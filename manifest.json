{
  "manifest_version": 2,
  "name": "Clean Reading Mode",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
}
